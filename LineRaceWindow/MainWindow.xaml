<Window x:Class="LineRaceWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LineRaceWindow"
        Title="Гонки" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="menubg.jpg"/>
    </Window.Background>
    <Grid>
        <!-- Главное меню -->
        <Grid x:Name="MainGrid">
            <Button Content="Играть на одном компьютере" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="51"
                    Margin="250,174,0,0" Click="PlayOnOneComputerButton_Click"/>
            <Button Content="Играть по сети" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="51" 
                    Margin="250,234,0,0" Click="PlayOnNETButton_Click"/>
            <Button Content="Выход" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="51" 
                    Margin="250,294,0,0" Click="ExitButton_Click"/>
        </Grid>

        <!-- Контейнер для других страниц, например для сетевой игры -->
        <ContentControl x:Name="MainContent" Visibility="Collapsed"/>
    </Grid>
</Window>
