<UserControl x:Class="LineRaceWindow.NetworkGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="NETmenubg.jpg"/>
        </Grid.Background>
        <Button x:Name="BackButton" Content="Назад" Width="100" Height="40" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="10,10,0,0" Click="BackButton_Click"/>

        <Button x:Name="CreateServerButton" Content="Создать сервер" Width="180" Height="52"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="CreateServerButton_Click" RenderTransformOrigin="-1.219,0.139" Margin="10,122,0,0"/>

        <Button x:Name="ConnectServerButton" Content="Подключиться к серверу" Width="180" Height="51"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="593,123,0,0" Click="ConnectServerButton_Click" RenderTransformOrigin="1.573,0.181"/>

        <TextBlock x:Name="StatusText" Text="" FontSize="16"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Margin="0,0,0,50"/>

        <StackPanel x:Name="IpInputPanel" Visibility="Collapsed"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0,0,0,100">
            <TextBlock Text="Введите IP:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="IpAddressBox" Width="200" Height="30"/>
            <Button Content="Подтвердить" Width="100" Height="30"
                    Click="ConfirmIpButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
